<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.kopo.ctc.kopo11.board.repo.mapper.SampleMapper">
   <select id="findAll" resultType="kr.ac.kopo.ctc.kopo11.board.domain.Sample">
      select 
         *
      from
         sample
   </select>      
   
   <select id="findAllByCondition" resultType="kr.ac.kopo.ctc.kopo11.board.domain.Sample">
	  select 
          *
      from
          sample u
      where 
          1 = 1
	   <include refid="whereCondition"/>
   </select>
   
   <sql id="whereCondition">
	   <if test="name != null">
		   and u.name = #{name}
	   </if>
	</sql>
</mapper>
